    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/node": "17.0.29",
    "@types/react": "^18.3.24",
    "mocha": "^10.0.0",
    "react": "^18.3.1",
    "size-limit": "^8.1.0",
    "uglify-js": "^3.16.3",
    "vue": "^3.5.21"
  },
  "size-limit": [
    {
      "path": "dist/bundle.js",
